rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{uid} {
      allow read, write: if request.auth.uid == uid;
    }
    match /status/{statusId} {
      allow read: if true;
      allow write: if false;
    }
  }
}